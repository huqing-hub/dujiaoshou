/* pages/cardDel/cardDel.wxss */
page{
	background-color: white;
}
.whole{
	padding-bottom: 100rpx;
}
.handBox{
	width: 100vw;
	padding: 14rpx 30rpx;
	box-sizing: border-box;
}
.handimg{
	width: 100%;
	height: 290rpx;
	background: center no-repeat;
	background-size: cover;
	display: flex;
	padding: 30rpx;
	box-sizing: border-box;
	background:linear-gradient(90deg,rgba(72,126,242,1) 0%,rgba(92,87,227,1) 100%);
	box-shadow:0px 20rpx 30rpx 0px rgba(75,123,246,0.3);
	border-radius:10rpx;
}
.leftBox{
	width: 65%;
}
.rightBox{
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	/* padding-left:19rpx;
	box-sizing: border-box;  */
}
.useInfo{
	width: 100%;
	display: flex;
}
.leftImg{
	width:80rpx;
	height: 80rpx;
	border-radius:50%;
	background: center no-repeat;
	background-size: cover;
	overflow: hidden;
}
.rightInfo{
	flex: 1;
	padding-left: 19rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.txt0{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(255,255,255,1);
}
.txts{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(255,255,255,1);
	opacity:0.6;
	margin-top: 17rpx;
}
.handCen{
	margin-top: 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding-left: 200rpx;
	box-sizing: border-box;
}
.txt3{
	font-size:60rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(255,255,255,1);
	line-height:50rpx;
}
.txt4{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(255,255,255,1);
	line-height:50rpx;
	opacity:0.6;
	margin-top: 10rpx;
}
.rightBox>view{
	display: flex;
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(255,255,255,1);
}
.rightBox>view>text{
	margin-right: 14rpx;
}
.rightBox>view>image{
	width: 18rpx;
	height: auto;
}
.upList{
	width: 730rpx;
	margin: 0 auto;
	display: flex;
	flex-wrap: wrap;
	margin-top: 13rpx;
}
.upList>view{
	width: 210rpx;
	height: 120rpx;
	background:rgba(218,181,126,0.05);
	border:2rpx solid rgba(234,234,234,1);
	margin-left: 25rpx;
	margin-top: 30rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.txt1{
	font-size:32rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(0,0,0,1);
}
.txt2{
	color: #9497A3;
	font-size:24rpx;
	font-family:PingFang-SC-Medium;
	margin-top: 15rpx;
}
.upList>.active{
	border:2rpx solid #004A95 
}
.active>.txt1{
	color: #004A95
}
.tips{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);
	width: 690rpx;
	margin: 0 auto;
	margin-top: 40rpx;
}
.giftBox{
	width:690rpx;
	height:200rpx;
	border:1rpx solid rgba(207,207,207,1);
	margin: 0 auto;
	margin-top: 29rpx;
	padding: 20rpx 0;
	box-sizing: border-box; 
	display: flex;
	justify-content: center;
}
.imglist{
	width: 160rpx;
}
.addicon{
	width: 69rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 32rpx;
	font-weight: bold;
	color: #C7C9CF;
}
.giftBg{
	width: 100%;
	height: 130rpx;
	background: center no-repeat;
	background-size: cover;
}
.giftName{
	display: block;
	width: 190rpx;
	font-size:20rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(49,49,52,1);
	margin-top: 10rpx;
	text-align: center;
}
.buyBtn{
	width:690rpx;
	height:90rpx;
	background:rgba(50,51,68,1);
	border-radius:10rpx;
	margin: 0 auto;
	margin-top: 60rpx;
	text-align: center;
	line-height: 90rpx;
	font-size:32rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(255,255,255,1);
}
.footBox{
	width: 690rpx;
	margin: 0 auto;
	margin-top: 67rpx;
}
.footTip{
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(148,151,163,1);
}
.contents{
	display: block;
	/* margin-top: 10rpx; */
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(148,151,163,1);
	line-height: 40rpx;
}
.setstyle{
	display: flex;
}
.giftBox>.setstyle:last-child>view:last-child{
	display: none;
}
