.alert .title{font-size:46rpx;font-family:PingFang SC;font-weight:bold;color:rgba(255,255,255,1);padding: 42rpx 30rpx 0rpx 30rpx;}
.alert .content{font-size:24rpx;font-family:PingFang SC;font-weight:500;color:rgba(255,255,255,1);padding: 33rpx 30rpx;width: 62%;
line-height:36rpx;}
