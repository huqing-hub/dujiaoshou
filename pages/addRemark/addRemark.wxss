/* pages/addRemark/addRemark.wxss */
.whole{
	width: 100vw;
	height: 100vh;
	padding: 44rpx 39rpx;
	box-sizing: border-box;
}
.txt1{
	font-size:36rpx;
	font-family:Source Han Sans CN;
	font-weight:500;
	color:rgba(51,51,51,1);
}
.p_style{
	font-size:28rpx;
	font-family:Source Han Sans CN;
	font-weight:400;
	color:rgba(163,163,163,1);
}
.areaBox{
	width: 100%;
	height: 200rpx;
	margin-top: 21rpx;
}
.fb_btn{
	position: relative;
	display: flex;
	justify-content: center;
}
.fb_btn>image{
	width: 674rpx;
	height:auto;
	margin: 0 auto;
	margin-top: 100rpx;
}
.txt2{
	position: absolute;
	font-size:30rpx;
	font-family:Source Han Sans CN;
	font-weight:500;
	color:rgba(255,255,255,1);
	top: 50%;
	margin-top: 20rpx;
}
.fb_btn button{
	width: 100%;
	height: 120rpx;
	position: absolute;
	left: 0;
	top: 90rpx;
	z-index: 999;
}