/* pages/videoList/videoList.wxss */
page{
	background-color: white;
}
.whole>.videolist:not(:last-child){
	border-bottom:10rpx solid rgba(248,250,251,1);
}
.videolist{
	width: 100vw;
	margin: 0 auto;
	padding: 0 30rpx;
	padding-top: 29rpx;
	box-sizing: border-box;
	padding-bottom: 29rpx;
}
.tips{
	font-size:22rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);	
}
.videoItem{
	width:100%;
	height:320rpx;
	background:rgba(50,51,68,1);
	border-radius:10rpx;
	margin-top: 19rpx;
	background: center no-repeat;
	background-size: cover;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}
.playBtn{
	width: 80rpx;
	height: auto;
}
.logs{
	width:110rpx;
	height:40rpx;
	background:rgba(154,183,232,1);
	opacity:0.7;
	border-radius:9rpx 0rpx 0rpx 0rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	position: absolute;
	left: 0;
	top: 0;
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(249,249,249,1);
}
.videoFoot{
	width: 100%;
	margin-top: 30rpx;
	display: flex;
}
.leftinfo{
	width: 80%;
	display: flex;
	flex-direction: column;
}
.txt1{
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(49,49,52,1);
	letter-spacing: 2rpx;
}
.txt2{
	font-size:22rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(49,49,52,1);
	margin-top: 13rpx;
	letter-spacing: 2rpx;
}
.rightinfo{
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	justify-content: center;
}
.txt3{
	font-size:22rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(50,51,68,1);
	margin-top: 13rpx;
}
.downimg{
	width: 32rpx;
	height: 32rpx;
	background: center no-repeat;
	background-size: cover;
	margin-right: 38rpx;
}