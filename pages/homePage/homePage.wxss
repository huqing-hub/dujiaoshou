/* pages/usePage/usePage.wxss */
.autherBox{
	width: 690rpx;
	height: auto;
	margin: 0 auto;
	margin-top: 30rpx;
	display: flex;
	align-items: center;
}
.leftImg{
	width: 140rpx;
	height: 140rpx;
	border-radius: 50%;
	background: center no-repeat;
	background-size: cover;
}
.rightInfo{
	flex: 1;
	padding-left:20rpx;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between; 
	align-items: center;
}
.leftTxt>text{
	display: block;
}
.auName{
	font-size:34rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(49,49,52,1);
}
.auname2{
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(49,49,52,1);
	margin-top: 19rpx;
}
.focus{
	width:120rpx;
	height:56rpx;
	background:rgba(216,178,123,1);
	border-radius:10px;
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(255,255,255,1);
	text-align: center;
	line-height: 56rpx;
}
.tabs{
	width: 100%;
	border-bottom: 1rpx solid rgba(235,235,235,1);
	margin-top: 80rpx;
	display: flex;
	justify-content: space-between;
	padding: 0 130rpx;
	box-sizing: border-box;
	padding-bottom:26rpx; 
}
.tabs>view{
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(166,166,169,1);
	text-align: center;
}
.tabs>.active{
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(50,51,68,1);
	position: relative;
}
.tabs>.active::after{
	content: "";
	width: 60rpx;
	height: 4rpx;
	background-color: black;
	position: absolute;
	left: 50%;
	transform: translateX(-50%);
	bottom: -28rpx;
}
.videolist{
	width: 690rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	/* margin-top: 40rpx; */
}
.videos{
	width:330rpx;
	height:auto;
	display: flex;
	flex-direction: column;
	margin-top: 40rpx;
}
.topImg{
	width: 100%;
	height:230rpx;
	border-radius:10rpx;
	background: center no-repeat;
	background-size: cover; 
	display: flex;
	justify-content: center;
	align-items: center;
}
.v_name{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(49,49,52,1);	
	margin-top: 20rpx;
	padding-left: 10rpx;
}
.f_num{
	font-size:18rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);
	margin-top:20rpx; 
	padding-left: 10rpx;
}
.playbtn{
	width:80rpx;
	height: auto; 
}
.conlist{
	width: 100%;
	height:144rpx;
	border-bottom: 1rpx solid rgba(232,232,232,1);
	display: flex;
	align-items: center;
	padding: 0 30rpx;
	box-sizing: border-box;  
}
.leftbox{
	width:70rpx;
	height: 70rpx;
	background: center no-repeat;
	background-size: cover; 
	border-radius: 50%;
}
.rightbox{
	flex: 1;
	padding-left: 30rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}
.rightbox>text:first-child{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(49,49,52,1);
}
.rightbox>text:last-child{
	font-size:18rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);
	margin-top: 25rpx;
}
.zhanwei{
	width: 100vw;
	height: 120rpx;
}
.footBtn{
	width:100vw;
	height:100rpx;
	background:rgba(50,51,68,1);
	display: flex;
	justify-content: center;
	align-items: center;
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 9;
}
.footBtn>view{
	display: flex;
	align-items: center;
	justify-content: center;
}
.fbimg{
	width:32rpx;
	height: 32rpx;
	background: center no-repeat;
	background-size: cover; 
}
.fbtxt{
	font-size:34rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(255,255,255,1);
	margin-left: 21rpx;
}