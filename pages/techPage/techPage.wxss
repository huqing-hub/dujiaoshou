/* pages/techPage/techPage.wxss */
.whole{
	padding-bottom:30rpx; 
}
.firInfo{
	width: 690rpx;
	height: 120rpx;
	margin: 0 auto;
	display: flex;
	margin-top: 21rpx;
	justify-items: center;
	position: relative;
	align-items: center;
}
.leftImg{
	width: 90rpx;
	height: 90rpx;
	background: center no-repeat;
	background-size: cover;
	border-radius: 50%;
}
.rightInfo{
	flex: 1;
	padding-left: 20rpx;
	box-sizing: border-box;
}
.rightInfo>text{
	display: block;
}
.rightInfo>text:nth-child(1){
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(49,49,52,1);
}
.rightInfo>text:nth-child(2){
	font-size:20rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(49,49,52,1);
	margin-top: 9rpx;
}
.rightInfo>text:nth-child(3){
	font-size:18rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);
	margin-top: 12rpx;
}
.gzBox{
	width:120rpx;
	height:56rpx;
	background:rgba(216,178,123,1);
	border-radius:10rpx;
	position: absolute;
	right: 0;
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(255,255,255,1);
	text-align: center;
	line-height: 56rpx;
}
.techpro{
	width: 690rpx;
	margin: 0 auto;
	margin-top: 44rpx;
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);
	line-height:34rpx;
}
.rowBox{
	width: 690rpx;
	display: flex;
	justify-content: space-between;
	margin: 0 auto;
	margin-top:92rpx; 
}
.rowBox2{
	margin-top:82rpx; 
	padding-right:45rpx; 
	position: relative;
	box-sizing: border-box;
	display: flex;
	align-items: center;
}

.rowBox>text:first-child{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);
}
.rowBox>text:last-child{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(49,49,52,1);
}
.tabs{
	width: 100%;
	border-bottom: 1rpx solid rgba(235,235,235,1);
	margin-top: 90rpx;
	display: flex;
	justify-content: space-between;
	padding: 0 130rpx;
	box-sizing: border-box;
	padding-bottom:26rpx; 
}
.tabs>view{
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(166,166,169,1);
	text-align: center;
}
.tabs>.active{
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(50,51,68,1);
	position: relative;
}
.tabs>.active::after{
	content: "";
	width: 60rpx;
	height: 4rpx;
	background-color: black;
	position: absolute;
	left: 50%;
	transform: translateX(-50%);
	bottom: -28rpx;
}
.videolist{
	width: 690rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	/* margin-top: 40rpx; */
}
.videos{
	width:330rpx;
	height:auto;
	display: flex;
	flex-direction: column;
	margin-top: 40rpx;
}
.topImg{
	width: 100%;
	height:230rpx;
	border-radius:10rpx;
	background: center no-repeat;
	background-size: cover; 
	display: flex;
	justify-content: center;
	align-items: center;
}
.v_name{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(49,49,52,1);	
	margin-top: 20rpx;
	padding-left: 10rpx;
}
.f_num{
	font-size:18rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);
	margin-top:20rpx; 
	padding-left: 10rpx;
}
.playbtn{
	width:80rpx;
	height: auto; 
}
.conlist{
	width: 100%;
	height:144rpx;
	border-bottom: 1rpx solid rgba(232,232,232,1);
	display: flex;
	align-items: center;
	padding: 0 30rpx;
	box-sizing: border-box;  
}
.leftbox{
	width:70rpx;
	height: 70rpx;
	background: center no-repeat;
	background-size: cover; 
	border-radius: 50%;
}
.rightbox{
	flex: 1;
	padding-left: 30rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}
.rightbox>text:first-child{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:rgba(49,49,52,1);
}
.rightbox>text:last-child{
	font-size:18rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(148,151,163,1);
	margin-top: 25rpx;
}
.jtbtn{
	width:15rpx;
	height: auto;
	position: absolute;
	right: 0; 
}