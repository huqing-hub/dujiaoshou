/* pages/usercenter/invitation/invitation.wxss */

page {
  height:100%;
  padding : 0;
  margin:0;
}
.main {
  height : 100%;
}
.loading {
  width: 100%;
  height:100%;
  position: absolute;
  z-index:9999;
}
.start_img {
  width: 350rpx;
  height:100rpx;
  display: inline-block;
  position: absolute;
  z-index: 99;
  bottom:140rpx;
  left:50%;
  transform: translateX(-50%);
  background: transparent;
  border: none !important;
  box-sizing: initial;
}
.page_box {
  height:100%;
  display: flex;
  flex-direction: column;
}
.start_img image {
  width: 100%;
  height:100%;
}
.bg_img {
  position: absolute;
  width: 100%;
  height:100%;
  overflow:hidden;
}
.page_img {
    width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;

}
.page_img > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color :  #fff;
}
.page_img > view:nth-child(1) {
  margin-top: 25rpx;
}
.page_img > view:nth-child(2) {
  margin-top: 100rpx;
}
.page_img > view:nth-child(1) > view:nth-child(2) {
  margin-top: 10rpx;
  
}
.page_img .tit_1,
.page_img .tit_2
 {
  letter-spacing: 4rpx;
}

.page_img .tit_1 {
  font-size : 50rpx;
} 
.page_img .tit_2 {
  font-size : 45rpx;
} 
.card_content {
  position: relative;
  display: flex;
  justify-content: flex-start;
}
.nick_img {
  position: absolute;
  width: 120rpx;
  height:120rpx;
  border:4rpx solid #fff;
  border-radius: 50%;
  left:50%;
  top:-60rpx;
  transform: translateX(-50%);
  box-shadow: 0 0 50rpx -20rpx #000;
}
.nick_name {
  position: relative;
  top:5rpx;
  color : #000;
  text-align: center;
  font-size : 35rpx;
}
.nick_img image {
  width: 120rpx;
  height:120rpx;
  border-radius: 50%;
}
.card_info {
  color : #000;
  font-weight: bold;
  z-index : 999;
  margin-top: 150rpx;
  width: 280px;

}
.card_info >view:nth-child(2) {
  margin-top: 25rpx;
}
.card_details {
  color : #000;
  padding : 20rpx 40rpx;
  border: 4rpx solid #2470BF;
  width: 100%;
  z-index : 999;
  margin-top: 45rpx;
  box-sizing: border-box;
}
.card_bg {
  position: absolute;
  top:0;
}
.card_details >view:nth-child(1) {
  color : #2470BF;
  font-weight: bold;
}
.card_details >view:nth-child(2) {
  margin-top: 10rpx;
  font-size: 24rpx;
  color : #999;
}
.cur_line {
  margin: 0 10rpx;
}
.card_get {
  margin-top: 80rpx;
  /* padding : 0 30rpx; */
  text-align: center;
  font-size : 35rpx;
  color : #fff;
  width: 100%;
  z-index: 999;
  box-sizing: border-box;
  display: flex;
}
.card_get > .get_txt {
  background-color: #0651a5;
  height : 100rpx;
  line-height : 100rpx;
  border-radius: 15rpx;
}
.card_get > view:nth-child(2) {
  margin-left : 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.card_get > view:nth-child(2) >view:nth-child(1) {
  color : #000;
  font-weight: bold;
}
.card_get > view:nth-child(2) >view:nth-child(2) {
  margin-top : 15rpx;
  color : #999;
  font-size : 32rpx;
}
.card_get image {
  width: 160rpx;
  height: 160rpx;
}
.share_box {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
  width: 320px !important;
}
.share_box > view {
  background: #fff;
  border-radius: 10rpx;
  color : #000;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}
.card_content > view {
  width: 280px;
}
.card_content .nick_img {
  width: 120rpx;
}
.share_info {
  font-size : 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:40rpx;
  line-height: 1.5;
  color : #bbd7f0;
}
/*canvas*/


.canvas-mask{position: fixed;left: 0;top: 0;z-index:999;width: 100%;height: 100%; background-color: rgba(0,0,0,0.8);}
.canvas-mask .content{margin: auto;width:750rpx;}
.canvas-mask .content .myCanvas{width:100%;height:1022rpx;background-color: #fff;}
.canvas-mask .content .btn{width: 60%;height: 62rpx;background-color: #e53333;color: #fff;font-size: 26rpx;border-radius: 62rpx;text-align: center;line-height: 62rpx;margin-left: auto;margin-right: auto; margin-top: 50rpx;}
.share-box {position: relative;}
.share-box .btn-share {width: 100%;height: 100%;position: absolute; background: transparent;border: 0;}
.share-box .btn-share::after{border: 0 !important;}
#myCanvas{width:574px;height:1022px;position: fixed;left: 100%;top: 0;}