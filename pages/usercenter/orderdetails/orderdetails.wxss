/* pages/usercenter/orderdetails/orderdetails.wxss */
.goods,.user_add,.detail,.tatol,.footer{background-color: #fff;}
.state{background:rgba(50,51,68,1);padding: 53rpx 101rpx;}
.state text{display: block;}
.state_title{font-size:32rpx;font-weight:bold;color:rgba(255,255,255,1);padding-bottom: 19rpx;}
.state_sig{font-size:24rpx;font-weight:500;color:rgba(255,255,255,1);}

.adds:last-child{border-top:rgba(235,235,235,1) solid 1px;}
.adds{padding: 41rpx 0rpx;}
.adds .phone{font-size:30rpx;font-weight:500;color:rgba(148,151,163,1);}
.adds .name{font-size:32rpx;font-weight:bold;color:rgba(49,49,52,1);padding-right:27rpx; }
.adds .txt{font-size:24rpx;font-weight:500;color:rgba(49,49,52,1);display: block;padding-top: 24rpx;}
.adds view{padding: 0rpx 42rpx 0rpx 40rpx;}

.time{font-size:18rpx;font-weight:500;color:rgba(148,151,163,1);}
.warehouse{font-size:24rpx;font-weight:500;color:rgba(49,49,52,1);}
.warehouse_add{font-size:26rpx;font-weight:bold;color:rgba(49,49,52,1);padding: 21rpx 0rpx;display: block;}

.user_add{padding: 0rpx 31rpx;}

.goods{margin: 20rpx auto;padding: 38rpx 30rpx;}
.goods image{width:150rpx;height:150rpx;border-radius:10rpx;margin-right: 25rpx;}
.goods .icon{background:rgba(255,163,152,1);border-radius:4rpx;padding: 6rpx 14rpx;font-size:16rpx;

font-weight:500;
color:rgba(255,255,255,1);}
.goods>navigator{margin-bottom: 51rpx;}
.goods .title{font-size:30rpx;font-weight:bold;color:rgba(49,49,52,1);}
.goods .gauge{font-size:22rpx;font-weight:500;color:rgba(148,151,163,1);}
.goods text{padding-bottom: 16rpx;display: block;}

.detailed .title{font-size:22rpx;font-weight:500;color:rgba(148,151,163,1);}
.detailed .num{font-size:22rpx;font-weight:500;color:rgba(49,49,52,1);}
.detailed{padding-bottom: 33rpx;}

.tatol{border-top: solid 1px rgba(235,235,235,1);font-size:28rpx;font-weight:500;color:rgba(49,49,52,1);line-height:34rpx;display: block;padding-top: 35rpx;}

.detail{margin-bottom: 20rpx;}
.detail_txt{padding: 0rpx 31rpx 33rpx 31rpx;}
.detail_txt:first-child{padding-top: 31rpx;}
.detail_txt .title,.detail_txt .txt{font-size:22rpx;font-weight:500;}
.detail_txt .title{color:rgba(148,151,163,1);}
.detail_txt .txt{color:rgba(49,49,52,1);}

.footer{padding: 21rpx 0rpx 20rpx 0rpx;border-top:rgba(235,235,235,1) solid 1px;position: fixed;bottom: 0rpx;width: 100%;}
.footer .service{width:160rpx;height:56rpx;border:1px solid rgba(175,175,175,1);border-radius:10rpx;font-size:28rpx;font-weight:500;color:rgba(150,150,150,1);}
.footer .service:first-child{margin-left: 30rpx;}
.footer .service:last-child{margin-right: 30rpx;margin-left: 20rpx;}

