/* pages/usercenter/Cardexchange/Cardexchange.wxss */
page{background-color: #fff;}
.top_txt{font-size:26rpx;font-weight:bold;color:rgba(148,151,163,1);line-height:36rpx;display: block;}
page{padding: 37rpx 31rpx;width: auto;}
.content{border:1px solid rgba(190,190,195,1);border-radius:10rpx;width: auto;overflow: hidden;margin-top: 38rpx;}
.pla{font-size:28rpx;font-weight:bold;color:rgba(199,201,207,1);}
.content input{padding: 0rpx 30rpx;height:88rpx;}
.content button{height:88rpx;padding: 0rpx 70rpx;border-radius: 0rpx;font-size:32rpx;font-weight:bold;color:rgba(255,255,255,1);position: relative;z-index: 999;}


/* pages/usercenter/couponlist/couponlist.wxss */
.list{margin: 40rpx 0rpx;background:rgba(255,255,255,1);border:1px solid rgba(239,239,239,1);box-shadow:0px 10rpx 30rpx 0px rgba(125,128,169,0.11);border-radius: 10rpx;}
.list .footer{background:rgba(220,218,221,1);border-radius:0px 0px 10rpx 10rpx;padding: 36rpx 38rpx 33rpx 38rpx;}
.top .left{padding: 33rpx 39rpx;border-right:2px dashed rgba(224,224,224,1);position: relative;}
.left .recharge{border:1px solid rgba(248,48,48,1);border-radius:22rpx;padding: 11rpx 20rpx;font-size:24rpx;
font-weight:500;color:rgba(255,163,152,1);display: block;margin-top: 20rpx;}
.left .prie{font-size:50rpx;font-weight:bold;color:rgba(255,163,152,1);}
.left .u{font-size:24rpx;font-weight:bold;color:rgba(255,163,152,1);margin-left: 15rpx;}


.top .right{padding: 34rpx 39rpx;}
.right .title{font-size:28rpx;font-weight:500;color:rgba(49,49,52,1);}
.right .remark{font-size:22rpx;font-weight:500;color:rgba(180,180,180,1);padding-top: 26rpx;display: block;}

.footer .time,.footer .status{font-size:22rpx;font-weight:500;color:rgba(148,151,163,1);}

.bt{font-size:30rpx;font-weight:bold;color:rgba(255,255,255,1);position: fixed;bottom: 0rpx;width: 100%;
border-radius: 0rpx;padding: 10rpx 0rpx;}

.triangle{border-color: #F4F6F9 #fff #fff #fff;border-style: solid;border-width: 15rpx 20rpx 0 20rpx;height: 0;width: 0;position: absolute;right: -20rpx;top: -0.5rpx;}

.not{background:rgba(249,249,249,1) !important;}
.not>.status{font-size:22rpx;font-weight:500;color:rgba(49,49,52,1);}
.not>image{margin-left: 13rpx;}
.not>text:first-child{color:rgba(148,151,163,1);}
.not>text:last-child{color:rgba(49,49,52,1);}
.not_txt text{color:rgba(220,218,221,1) !important;}
.not_txt .recharge{border: rgba(220,218,221,1) solid 1px;}
.not_txt .footer>text{color:rgba(255,255,255,1) !important;}

.failure{position: relative;text-align: center;font-size:24rpx;font-weight:500;color:rgba(148,151,163,1);line-height:34rpx;}



.tab-nav-item.tab-active:before {
    width:120rpx;
    top: 50%;
    height: 4rpx;
    position: absolute;
    right: 18%;
    z-index: 4;
    background:rgba(227,227,227,1);
    border-radius:2px;
}
.tab-nav-item.tab-active:after {
   width:120rpx;
    top: 50%;
    height: 4rpx;
    position: absolute;
    left: 18%;
    z-index: 4;
    background:rgba(227,227,227,1);
    border-radius:2px;
}
.badge:after, .tab-nav-item.tab-active:before, .tab-nav-item.tabbt:before,.tab-nav-item:not(:last-child):after, .tab-nav:after {
    content: '';
}
