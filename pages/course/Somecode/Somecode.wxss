}
.code_c {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 100%;
  transform: translate(-50%, -50%);
}
.code{
  margin: 0rpx 60rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 10rpx 30rpx 0px rgba(125, 128, 169, 0.11);
  border-radius: 10rpx;
}
.code>text:first-child{padding-bottom: 70rpx;display: block;text-align: center;padding-top: 70rpx;}
.code>image{width:440rpx;height:440rpx;}
.code>text:last-child{padding-bottom: 63rpx;padding-top: 57rpx;font-size:26rpx;font-weight:500;color:rgba(148,151,163,1);}
button{background:rgba(50,51,68,1);border: none;border-radius: 0rpx;position: absolute;bottom: 0rpx;width: 100%;font-size:34rpx;font-weight:bold;color:rgba(255,255,255,1);}